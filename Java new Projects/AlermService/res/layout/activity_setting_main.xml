<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:background="@drawable/bg"
    android:gravity="center"
    tools:context=".SettingMainActivity" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:background="#25E8BB"
        android:orientation="horizontal"
         >
<ImageView
            android:id="@+id/mn"
            android:layout_width="40dp"
            android:paddingLeft="10dp"
            android:paddingTop="15dp"
            android:layout_height="fill_parent"
            android:src="@drawable/men" />
        <ImageView
            android:id="@+id/left_bt"
            android:layout_width="40dp"
            android:layout_marginLeft="20dp"
            android:layout_height="fill_parent"
            android:src="@drawable/contacts" />
        <ImageView
            android:id="@+id/msg"
            android:layout_width="40dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="15dp"
            android:layout_height="fill_parent"
            android:src="@drawable/email" />
        
    </LinearLayout>
    <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:gravity="center"
        >

    <LinearLayout
        android:id="@+id/normalsetting"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/head"
        android:gravity="center"
        android:orientation="horizontal"
        android:weightSum="2" >

        <LinearLayout
            android:id="@+id/tab1_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_weight="1"
            android:orientation="vertical"
            android:weightSum="2"
            android:layout_margin="5dp">

            <LinearLayout
                android:id="@+id/txtspeech_bt"
                android:layout_width="140dp"
                android:layout_height="140dp"
                android:layout_weight="1"
                
                android:background="@drawable/bg"
                android:gravity="center"
                android:orientation="vertical" >

                <ImageView
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:src="@drawable/spch"
                    />

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:fontFamily="Helvetica"
                    android:text="Speak Alarm"
                    android:textColor="#F4FAFA"
                    
                    />
            </LinearLayout>
<TextView android:layout_width="fill_parent"
android:layout_height="5dp"
/>

            <LinearLayout
                android:id="@+id/setting"
                android:layout_width="140dp"
                android:layout_height="140dp"
                 android:layout_weight="1"
                android:background="@drawable/bg"
                android:gravity="center"
                android:orientation="vertical" >

                <ImageView
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:src="@drawable/setting"
                   />

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Setting Alarm"
                    android:fontFamily="Helvetica"
                    android:textColor="@android:color/white"
                     />
            </LinearLayout>
<TextView android:layout_width="fill_parent"
android:layout_height="5dp"
/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/srch_ntice_tab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:weightSum="2"
            android:layout_weight="1"
            android:orientation="vertical"
            
            android:layout_margin="5dp">

            <LinearLayout
                android:id="@+id/clock_bt"
                android:layout_width="140dp"
                android:layout_height="140dp"
                android:layout_weight="1"
                android:background="@drawable/bg"
                android:gravity="center"
                 
                android:orientation="vertical" >

                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="120dp"
                    android:src="@drawable/cl"
                    />

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Clock"
                    android:fontFamily="Helvetica"
                    android:textColor="@android:color/white"
                     />
            </LinearLayout>
<TextView android:layout_width="fill_parent"
android:layout_height="5dp"
/>

            <LinearLayout
                android:id="@+id/liby"
                android:layout_width="140dp"
                android:layout_height="140dp"
                 android:layout_weight="1"
                android:background="@drawable/icons"
                android:gravity="center"
                android:orientation="vertical" >

                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="120dp"
                    android:src="@drawable/set"
                     />

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:fontFamily="Helvetica"
                    android:text="Setting"
                   
                    android:textColor="@android:color/white"
                    />
            </LinearLayout>
<TextView android:layout_width="fill_parent"
android:layout_height="5dp"
/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
</LinearLayout>
